@model ICollection<Usuario>
@{
    ViewData["Title"] = "Listagem de Usu√°rios";
}



<div class="row">
    <div class="col-md-12">

        
        <table  class="table"> 
            <thead>
                <tr><th>ID</th>
                <th>Usuario</th>
                <th>Login</th>
                <th>E-mail</th>
               
                
                </tr>
            </thead>
            <tbody>
                @foreach(Usuario u in Model)
                {
                <tr>
                    <td>@u.ID</td>
                    <td>@u.Nome</td>
                    <td>@u.Login</td>
                    <td>@u.Email</td>
                    
                   
                    <td><a href="/Usuario/Editar?ID=@u.ID">Editar</a></td>
                    <td><a href="/Usuario/Excluir?ID=@u.ID">Excluir</a></td>
                </tr>
                }

               
            </tbody>
        </table>
    </div>
</div>

