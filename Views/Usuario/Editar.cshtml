@model Usuario
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Edição de Usuarios";
}

<h1 class="row justify-content-md-center" >Edição de Usuarios</h1>
<div class="row justify-content-md-center">
    <form asp-action="Editar" method="POST" onsubmit="return validar_conta(this)">
        
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control"/>
            </div>          
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input type="password" asp-for="Senha" id="txtsenha" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Plano</label>
                <select name="tipo">
                    <option value="@Usuario.BASICO">Básico</option>
                    <option value="@Usuario.PESSOAL">Pessoal</option>
                    <option value="@Usuario.EMPRESARIAL">Empresarial</option>
                </select>
            </div>
            
           
        </fieldset>
        
        <input asp-for="ID" type="hidden" value="@Context.Session.GetInt32("ID")">
        <input type="submit" value="Atualizar"/>
    </form>
</div>