@model Usuario
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Cadastro de Usuarios";
}

<h1 class="row justify-content-md-center">Cadastro de Usuarios</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4" onsubmit="return validar_conta(this)">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" required>
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" required>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" required>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input type="password" asp-for="Senha" id="txtsenha" required>
            </div>
            <div class="form-group">
                <label>Plano</label>
                <select name="tipo">
                    <option value="@Usuario.BASICO">BÃ¡sico</option>
                    <option value="@Usuario.PESSOAL">Pessoal</option>
                    <option value="@Usuario.EMPRESARIAL">Empresarial</option>
                </select>
            </div>
            @ViewData["mensagem"]

        </fieldset>
        <input type="submit" value="Cadastrar">
    </form>
</div>